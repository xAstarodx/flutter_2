{
  "name": "Flutter Linux Desktop",
  "image": "ghcr.io/cirruslabs/flutter:stable",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },
  "remoteUser": "root",
  "postCreateCommand": "apt-get update && apt-get install -y libgtk-3-dev liblzma-dev libstdc++6 pkg-config && flutter config --enable-linux-desktop && flutter doctor",
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "Escritorio Linux (VNC)",
      "onAutoForward": "notify"
    }
  }
}
